{
  "family": "tumlinson-poc",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::967525620453:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::967525620453:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "tumlinson-poc",
      "image": "YOUR_ECR_REPO_URI:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "HOST",
          "value": "0.0.0.0"
        },
        {
          "name": "PORT",
          "value": "8000"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "ALGORITHM",
          "value": "HS256"
        },
        {
          "name": "ACCESS_TOKEN_EXPIRE_MINUTES",
          "value": "30"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:967525620453:secret:tumlinson-poc-zMTSca:DATABASE_URL::"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:967525620453:secret:tumlinson-poc-zMTSca:AWS_ACCESS_KEY_ID::"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:967525620453:secret:tumlinson-poc-zMTSca:AWS_SECRET_ACCESS_KEY::"
        },
        {
          "name": "AWS_S3_BUCKET_NAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:967525620453:secret:tumlinson-poc-zMTSca:AWS_S3_BUCKET_NAME::"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:967525620453:secret:tumlinson-poc-zMTSca:SECRET_KEY::"
        },
        {
          "name": "TRACKING_CSV_S3_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:967525620453:secret:tumlinson-poc-zMTSca:TRACKING_CSV_S3_KEY::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/tumlinson-poc",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c 'import urllib.request; urllib.request.urlopen(\"http://localhost:8000/api/config\")' || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      }
    }
  ]
}

